---
import BaseLayout from "../../layouts/BaseLayout.astro";

// SpeakerDeckのRSSを取得
const RSS_URL = "https://speakerdeck.com/riiimparm.rss";
let slides: any[] = [];

try {
  const response = await fetch(RSS_URL);
  const rssText = await response.text();
  
  // XMLを正規表現でパース（Astroのビルド時に動作）
  const itemRegex = /<item>([\s\S]*?)<\/item>/g;
  const items = [...rssText.matchAll(itemRegex)];
  
  slides = items.map((match) => {
    const itemContent = match[1];
    
    // 各要素を抽出
    const titleMatch = itemContent.match(/<title>(.*?)<\/title>/);
    const linkMatch = itemContent.match(/<link>(.*?)<\/link>/);
    const pubDateMatch = itemContent.match(/<pubDate>(.*?)<\/pubDate>/);
    const descriptionMatch = itemContent.match(/<description>(.*?)<\/description>/);
    const mediaContentMatch = itemContent.match(/<media:content url="(.*?)"/);
    
    const title = titleMatch ? titleMatch[1] : "";
    const link = linkMatch ? linkMatch[1] : "";
    const pubDate = pubDateMatch ? new Date(pubDateMatch[1]) : new Date();
    const description = descriptionMatch ? descriptionMatch[1] : "";
    const imageUrl = mediaContentMatch ? mediaContentMatch[1] : "";
    
    // 画像URLからIDを抽出（presentations/以降、/preview_slide_0.jpgの前まで）
    const imageUrlMatch = imageUrl.match(/presentations\/([a-f0-9]+)\//);
    const slideId = imageUrlMatch ? imageUrlMatch[1] : "";
    
    return {
      title,
      link,
      pubDate,
      description,
      imageUrl,
      slideId,
    };
  });
} catch (error) {
  console.error("RSS取得エラー:", error);
}
---

<BaseLayout>
  <section>
    <h2>// SLIDES</h2>

    <div class="slides-grid">
      {slides.map((slide, index) => (
        <div class="slide-item" data-slide-index={index}>
          <div class="slide-thumbnail">
            <img src={slide.imageUrl} alt={slide.title} loading="lazy" />
            <div class="slide-overlay">
              <span class="view-text">View Details</span>
            </div>
          </div>
          <h3 class="slide-title">{slide.title}</h3>
          <time class="slide-date">
            {slide.pubDate.toLocaleDateString('ja-JP', { year: 'numeric', month: '2-digit', day: '2-digit' })}
          </time>
        </div>
      ))}
    </div>

    <!-- モーダル -->
    <div class="modal" id="slideModal">
      <div class="modal-content">
        <button class="modal-close" id="modalClose">&times;</button>
        <div class="modal-body">
          <div id="speakerdeckEmbed"></div>
          <div class="modal-info">
            <h3 id="modalTitle"></h3>
            <time id="modalDate"></time>
            <a id="modalLink" href="" target="_blank" rel="noopener noreferrer" class="modal-link">
              View on SpeakerDeck →
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <style>
    .slides-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
      gap: 2rem;
      margin-top: 1.5rem;
    }

    .slide-item {
      border: 1px solid #0aff0a;
      background: rgba(10, 255, 10, 0.03);
      cursor: pointer;
      transition: all 0.3s ease;
      overflow: hidden;
    }

    .slide-item:hover {
      background: rgba(10, 255, 10, 0.08);
      border-color: #0aff0a;
      box-shadow: 0 0 15px rgba(10, 255, 10, 0.3);
      transform: translateY(-2px);
    }

    .slide-thumbnail {
      position: relative;
      width: 100%;
      aspect-ratio: 16 / 9;
      overflow: hidden;
      background: rgba(10, 255, 10, 0.05);
    }

    .slide-thumbnail img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      transition: transform 0.3s ease;
    }

    .slide-item:hover .slide-thumbnail img {
      transform: scale(1.05);
    }

    .slide-overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.7);
      display: flex;
      align-items: center;
      justify-content: center;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .slide-item:hover .slide-overlay {
      opacity: 1;
    }

    .view-text {
      color: #0aff0a;
      font-size: 1.1rem;
      font-weight: bold;
    }

    .slide-title {
      font-size: 1rem;
      font-weight: bold;
      color: #0aff0a;
      margin: 0;
      padding: 1rem 1rem 0.5rem;
      line-height: 1.4;
      display: -webkit-box;
      -webkit-line-clamp: 2;
      -webkit-box-orient: vertical;
      overflow: hidden;
    }

    .slide-date {
      display: block;
      font-size: 0.85rem;
      color: #0aff0a;
      opacity: 0.7;
      padding: 0 1rem 1rem;
    }

    /* モーダルスタイル */
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      background-color: rgba(0, 0, 0, 0.9);
      animation: fadeIn 0.3s ease;
    }

    .modal.active {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }

    .modal-content {
      background-color: #000;
      border: 2px solid #0aff0a;
      width: 90%;
      max-width: 1000px;
      max-height: 90vh;
      overflow-y: auto;
      position: relative;
      animation: slideIn 0.3s ease;
    }

    @keyframes slideIn {
      from {
        transform: translateY(-50px);
        opacity: 0;
      }
      to {
        transform: translateY(0);
        opacity: 1;
      }
    }

    .modal-close {
      position: absolute;
      top: 10px;
      right: 20px;
      color: #0aff0a;
      font-size: 2rem;
      font-weight: bold;
      border: none;
      background: none;
      cursor: pointer;
      z-index: 1;
      transition: opacity 0.2s;
      line-height: 1;
      padding: 0;
      width: 40px;
      height: 40px;
    }

    .modal-close:hover {
      opacity: 0.7;
    }

    .modal-body {
      padding: 2rem;
    }

    #modalImage {
      width: 100%;
      height: auto;
      margin-bottom: 1.5rem;
      border: 1px solid rgba(10, 255, 10, 0.3);
    }

    #speakerdeckEmbed {
      margin-bottom: 1.5rem;
      width: 100%;
    }

    #speakerdeckEmbed iframe {
      width: 100%;
      height: auto;
      aspect-ratio: 16 / 9;
      border: 0;
      border-radius: 6px;
      box-shadow: 0 5px 40px rgba(10, 255, 10, 0.2);
    }

    .modal-info {
      color: #0aff0a;
    }

    #modalTitle {
      font-size: 1.5rem;
      margin: 0 0 0.5rem 0;
      color: #0aff0a;
      line-height: 1.4;
    }

    #modalDate {
      display: block;
      font-size: 0.9rem;
      opacity: 0.7;
      margin-bottom: 1rem;
    }

    #modalDescription {
      line-height: 1.6;
      margin-bottom: 1.5rem;
    }

    .modal-link {
      display: inline-block;
      color: #0aff0a;
      text-decoration: none;
      font-weight: bold;
      border: 1px solid #0aff0a;
      padding: 0.75rem 1.5rem;
      transition: all 0.3s ease;
    }

    .modal-link:hover {
      background: rgba(10, 255, 10, 0.1);
      box-shadow: 0 0 10px rgba(10, 255, 10, 0.3);
    }

    @media (max-width: 768px) {
      .slides-grid {
        grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
        gap: 1.5rem;
      }

      .modal-body {
        padding: 1rem;
      }

      #modalTitle {
        font-size: 1.2rem;
      }

      .modal-content {
        width: 95%;
      }
    }
  </style>

  <script define:vars={{ slides }}>
    document.addEventListener('DOMContentLoaded', () => {
      const slideItems = document.querySelectorAll('.slide-item');
      const modal = document.getElementById('slideModal');
      const modalClose = document.getElementById('modalClose');
      const speakerdeckEmbed = document.getElementById('speakerdeckEmbed');
      const modalTitle = document.getElementById('modalTitle');
      const modalDate = document.getElementById('modalDate');
      const modalLink = document.getElementById('modalLink');

      slideItems.forEach((item) => {
        item.addEventListener('click', () => {
          const index = parseInt(item.getAttribute('data-slide-index'));
          const slide = slides[index];

          // SpeakerDeck埋め込みiframeを作成（参考形式に合わせる）
          const embedUrl = `https://speakerdeck.com/player/${slide.slideId}`;
          speakerdeckEmbed.innerHTML = `
            <iframe 
              class="speakerdeck-iframe" 
              frameborder="0" 
              src="${embedUrl}" 
              title="${slide.title}" 
              allowfullscreen="true" 
              style="border: 0; background: rgba(0, 0, 0, 0.1); margin: 0; padding: 0; border-radius: 6px; box-shadow: rgba(10, 255, 10, 0.2) 0 5px 40px; width: 100%; height: auto; aspect-ratio: 16 / 9;"
              data-ratio="1.7777777777777777"
            ></iframe>
          `;

          modalTitle.textContent = slide.title;
          modalDate.textContent = new Date(slide.pubDate).toLocaleDateString('ja-JP', { 
            year: 'numeric', 
            month: '2-digit', 
            day: '2-digit' 
          });
          
          modalLink.href = slide.link;

          modal.classList.add('active');
          document.body.style.overflow = 'hidden';
        });
      });

      const closeModal = () => {
        modal.classList.remove('active');
        document.body.style.overflow = '';
        // モーダルを閉じる時に埋め込みをクリア
        speakerdeckEmbed.innerHTML = '';
      };

      modalClose.addEventListener('click', closeModal);

      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          closeModal();
        }
      });

      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && modal.classList.contains('active')) {
          closeModal();
        }
      });
    });
  </script>
</BaseLayout>